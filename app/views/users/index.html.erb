<table>
<tr>
<th>firstname</th>
<th>lastname</th>
<th>email</th>
</tr>
<% @user.each do |b|%>
<tr>
<td><%= b.firstname%></td>
<td><%= b.lastname%></td>
<td><%= b.email%></td>
<td><%= link_to 'Show profile' , user_show_path(b) %></td>
<td><%= link_to 'Destroy' , user_destroy_path(b),
method: :delete,
data: {confirm: 'Are you sure?'} %></td>
</tr>
<%end%>
</table>